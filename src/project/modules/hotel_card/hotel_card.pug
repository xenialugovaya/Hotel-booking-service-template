include ../ratings/ratings

mixin hotel_card (hcImg, hcNum, hcPrice, roomType, hcReviews)
    .hotel_card
        .hotel_img
            img(src=hcImg)
        .hotel_descr
            .hotel_card-header
                span.numbersign №
                span.number #{hcNum}
                span.purpletext #{roomType}
                .priceline
                    span.price #{hcPrice}
                    span.priceper в сутки
            .hotel_card-ratings
                +rating()
                .priceline
                    span.price #{hcReviews}
                    span.priceper Отзывов