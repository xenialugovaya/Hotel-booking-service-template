include ../like_button/like_button

mixin review(image, Name, Date, textReview, defaultCounter, likeName, likeValue, likeChecked)
  .review-block
    .avatar
      img(src=require('../../modules/review/images/' + image))
      +like_button(defaultCounter, likeName, likeValue, likeChecked)
    .review-text
      .name #{Name}
      p.date #{Date}
      p.textReview #{textReview}