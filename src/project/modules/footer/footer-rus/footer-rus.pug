include ../__column/footer__column
include ../../logo/logo
include ../../forms/__input/form__input

mixin footer-rus()
  .wrap-footer
    .footer_logo-column
      +logo-icon({disabled:false})
      p Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
    +footerColumn('навигация', [{href:'/mock-address/change-me', val:'О нас'}, {href:'/mock-address/change-me', val:'Новости'}, {href:'/mock-address/change-me', val:'Служба поддержки'}, {href:'/mock-address/change-me', val:'Услуги'}])
    +footerColumn('о нас', [{href:'/mock-address/change-me', val:'О сервисе'}, {href:'/mock-address/change-me', val:'Наша команда'}, {href:'/mock-address/change-me', val:'Вакансии'}, {href:'/mock-address/change-me', val:'Инвесторы'}])
    +footerColumn('Служба поддержки', [{href:'/mock-address/change-me', val:'Соглашения'}, {href:'/mock-address/change-me', val:'Сообщества'}, {href:'/mock-address/change-me', val:'Связь с нами'}])
    .footer_subscription-column
      h3 Подписка
      p Получайте специальные предложения и новости сервиса
      +formInput('text', 'subscription', 'Email', 'subscription', 'subscription-wrap')
  .wrap-footer-copyright
    p Copyright © 2018 Toxin отель. Все права защищены.
    .socials
      .social-twitter
      .social-fb
      .social-insta
