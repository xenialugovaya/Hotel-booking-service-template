extends ../layout/main

block variables

  -var pageTitle= 'Search room'

block content
  include ../modules/hotel_card/hotel_card
  include ../modules/forms/__input/form__input
  include ../modules/range_slider/multirange
  include ../modules/checkbox-group/checkbox-group
  include ../modules/pagination/pagination

  .search-room-content
    aside.filter-column
      .filter-column-elem
        +formInput('text', 'даты пребывания в отеле', '19 авг - 23 авг', 'middle-calendar', 'wrap-middle')
      .filter-column-elem.guests
        +formInput('', 'гости', '', 'default-input', 'wrap-middle', '', 'dropdown', '3', ['взрослые', 'дети', 'младенцы'])
