extends ../../layout/main
include ../../modules/review/review
include ../../modules/room-icon/room-icon
include ../../modules/bullet-list/bullet-list
include ../../modules/donut-chart/donut-chart
include ../../modules/form-booking/form-booking

block variables

  -var pageTitle= 'Room details'

block content

  .room-gallery
    .main-img
      img(src=require('./images/main-gallery-image.jpg') alt='Main gallery image')
    .small-img1
      img(src=require('./images/small-gallery-image-1.jpg') alt='Small gallery image 1')
    .small-img2
      img(src=require('./images/small-gallery-image-2.jpg') alt='Small gallery image 2')
  .room-details-content
    .room-icons
      h2 Сведения о номере
      +room-icon({icon:'tag_faces', title:'Комфорт', descr: 'Шумопоглощающие стены', hasLine: true})
      +room-icon({icon:'location_city', title:'Удобство', descr: 'Окно в каждой из спален', hasLine: true})
      +room-icon({icon:'whatshot', title:'Уют', descr: 'Номер оснащен камином'})
    .room-diagram
      h2 Впечатления от номера
      +donut-chart()
    .room-booking-form
      +form-booking()
    .room-reviews
      div.room-heading
        h2 Отзывы посетителей номера
        span.review-number 2 отзыва
      +review({image: 'review-image-1.jpg', author: 'Мурад Сарафанов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', likeNumber: '12', likeChecked: 'checked'})
      +review({image: 'review-image-2.jpg', author: 'Патрисия Стёклышкова', date: 'Неделю назад', text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент', likeNumber: '2'})
    .room-bullet-list
      h2 Правила
      +bullet-list({
        items: [
          'Нельзя с питомцами', 
          'Без вечеринок и мероприятий', 
          'Время прибытия — после 13:00, а выезд до 12:00'
        ]
      })
    .room-short-text
      h2 Отмена
      p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.