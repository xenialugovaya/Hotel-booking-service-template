extends ../layout/content-wrapper/content-wrapper
include ../modules/page-registration/page-registration

block variables

  - let pageTitle= "Registration"

block content
  +page-registration({
    formRegistration:{
      header: "Регистрация аккаунта",
      name: {placeholder: "Имя", type: "text"}, 
      surname: {placeholder: "Фамилия", type: "text"}, 
      sex: [
        {title: "Мужчина", value: "male", checked: "checked"},
        {title: "Женщина", value: "female"},
      ],
      dateOfBirth: {
        header: "Дата рождения",
        input: {placeholder: "ДД.ММ.ГГГ", type: "text", masked: true},
      },  
      access: {
        header: "Данные для входа в сервис",
        email: {placeholder: "Email", type: "email"},
        password: {placeholder: "Пароль", type: "password"},
      }, 
      subscription: {
        title: "Получать спецпредложения", 
        value: "mytoggle", 
        name: "toggle"
      },
      footer: {
        bigButtonText: "Перейти к оплате", 
        ghostButtonText: "войти", 
        footerText:"Уже есть аккаунт на Toxin", 
        logout: true
      }
    }
  })